
<h1>Items#new</h1>

<%= form_for :item, url: item_path(@item), method: :patch do |f| %>
    <%= label_tag(:title, "Titel:") %><br />
    <%= f.text_field :title %>
    <br /><br />

    <%= label_tag(:description, "Beschrijving:") %><br />
    <%= f.text_area :description, size: "50x10" %>
    <br /><br />

    <%= label_tag(:url, "URL:") %><br />
    <%= f.text_field :url %>
    <br /><br />

    <%= f.submit "Aanmaken" %>

<% end %>